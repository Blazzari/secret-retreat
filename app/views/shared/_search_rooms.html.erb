<div class="d-flex align-items-center">
  <%= form_with url: "/rooms", method: :get do |form| %>
    <div class="global">
      <%= form.text_field :city, placeholder: 'City', class: "ms-2 section city"%>
      <%= form.number_field :guests, placeholder: 'Guests number', in: 1..10, step: 1, class: "section guests" %>
      <%= form.number_field :min_price, placeholder: 'Min price', in: 0..1000, step: 10, class: "section prices"%>
      <%= form.number_field :max_price, placeholder: 'Max price', in: 0..1000, step: 10, class: "section prices me-2" %>
    </div>
      <button type="submit", class="section submit d-none"><i class="fa-solid fa-magnifying-glass"></i></button>
  <% end %>
</div>